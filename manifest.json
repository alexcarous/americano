{
  "name": "Americano",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Fix kyboard problsm by arbitrarily rmapping your kys. Basd on esperantoremap from Google's extra-keyboards-for-chrome-os.",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "input"
  ],
  "input_components": [
    {
      "name": "Americano",
      "type": "ime",
      "id": "americano",
      "description": "Americano keyboard",  // user visible description
      "language": "en-US",  // The primary language this IME is used for
      "layouts": ["us"]
    }
  ]
}
